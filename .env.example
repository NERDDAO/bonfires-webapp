# =============================================================================
# Delve Unified Webapp - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values.
# Never commit .env.local to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Backend API Configuration
# -----------------------------------------------------------------------------

# Delve backend API URL
NEXT_PUBLIC_DELVE_API_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Web3 Configuration
# -----------------------------------------------------------------------------

# Blockchain chain ID (11124 = Abstract Testnet)
NEXT_PUBLIC_CHAIN_ID=11124

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable/disable graph visualization feature (default: true)
NEXT_PUBLIC_ENABLE_GRAPH_VIZ=true

# Enable/disable Web3 features like data rooms and payments (default: true)
NEXT_PUBLIC_ENABLE_WEB3_FEATURES=true

# -----------------------------------------------------------------------------
# Application Info
# -----------------------------------------------------------------------------

# Application version (usually set during build)
NEXT_PUBLIC_APP_VERSION=1.0.0

# Environment identifier (development, staging, production)
NEXT_PUBLIC_ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------

# Ignore TypeScript and ESLint errors during build (use only for debugging)
# NEXT_PUBLIC_IGNORE_BUILD_ERROR=false
