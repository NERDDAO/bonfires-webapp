# =============================================================================
# Delve Unified Webapp - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values.
# Never commit .env.local to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Backend API Configuration
# -----------------------------------------------------------------------------

# Delve backend API URL (client-side, exposed to browser)
NEXT_PUBLIC_DELVE_API_URL=http://tnt-v2.api.bonfires.ai

# Delve backend API URL (server-side only, for API routes)
# This is NOT exposed to the browser and can be an internal URL
# If not set, falls back to NEXT_PUBLIC_DELVE_API_URL
DELVE_API_URL=http://localhost:8000

# Admin API Key to access the Delve backend API
API_KEY=bonfires-api-key

# -----------------------------------------------------------------------------
# Clerk Authentication
# -----------------------------------------------------------------------------

# Clerk publishable key (get from https://dashboard.clerk.com)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...

# Clerk secret key (server-side only)
CLERK_SECRET_KEY=sk_test_...

# Clerk redirect URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/dashboard

# -----------------------------------------------------------------------------
# Web3 Configuration
# -----------------------------------------------------------------------------

# Blockchain chain ID (11124 = Abstract Testnet)
NEXT_PUBLIC_CHAIN_ID=11124

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id

# -----------------------------------------------------------------------------
# ERC-1155 / Bonfire Provisioning
# -----------------------------------------------------------------------------

# ERC-1155 contract address to burn access tokens from (Ethereum Mainnet)
NEXT_PUBLIC_ERC1155_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# ERC-1155 token ID required for provisioning
NEXT_PUBLIC_ERC1155_TOKEN_ID=1

# BonfireProvisionWrapper contract address (Ethereum Mainnet)
NEXT_PUBLIC_PROVISION_WRAPPER_ADDRESS=0x0000000000000000000000000000000000000000

# ERC-8004 Identity Registry contract address (Ethereum Mainnet)
NEXT_PUBLIC_ERC8004_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000

# Pinata JWT for server-side IPFS uploads (never exposed to browser)
PINATA_JWT=your_pinata_jwt_here

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable/disable graph visualization feature (default: true)
NEXT_PUBLIC_ENABLE_GRAPH_VIZ=true

# Enable/disable Web3 features like data rooms and payments (default: true)
NEXT_PUBLIC_ENABLE_WEB3_FEATURES=true

# -----------------------------------------------------------------------------
# Subdomain Configuration
# -----------------------------------------------------------------------------

# Comma-separated hostnames that are the app root (no subdomain).
# Used for subdomain parsing (e.g. boulder.app.bonfires.ai -> boulder).
# Default: app.bonfires.ai,staging-app.bonfires.ai
# For local dev, localhost/127.0.0.1 always return no subdomain.
# NEXT_PUBLIC_APP_ROOTS=app.bonfires.ai,staging-app.bonfires.ai

# -----------------------------------------------------------------------------
# Application Info
# -----------------------------------------------------------------------------

# Application version (usually set during build)
NEXT_PUBLIC_APP_VERSION=1.0.0

# Environment identifier (development, staging, production)
NEXT_PUBLIC_ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------

# Enable E2E wallet overrides for Playwright (default: false)
# NEXT_PUBLIC_E2E_WALLET=false

# Ignore TypeScript and ESLint errors during build (use only for debugging)
# NEXT_PUBLIC_IGNORE_BUILD_ERROR=false
