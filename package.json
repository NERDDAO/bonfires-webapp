  "devDependencies": {
    "@types/node": "^20.14.12",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/uuid": "^10.0.0",
    "graphology-types": "^0.24.8",
    "typescript": "^5.9.3",
    "eslint": "^9.23.0",
    "eslint-config-next": "^15.3.3",
    "eslint-config-prettier": "^10.1.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "prettier": "^3.6.2",
    "@tailwindcss/postcss": "latest",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
